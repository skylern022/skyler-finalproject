{% extends '_layouts/base.njk' %}
{% set discography = queen.discography %}

 <title>{% block page_title %}Discography{% endblock %}</title>
 {% block page_description %}A list of Queen's discography{% endblock %}

{% block content %}
  <article class="containter">
  {% for discography in queen.discography%}
    <div class="card mb-3">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="img/{{discography.image}}" class="card-img" alt="{{discography.title}}">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">{{discography.title}}</h5>
            <p class="card-text">{{discography.year}}</p>
            <p class="card-text"><small class="text-muted">Discography</small></p>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
  </article>
{% endblock %}


  
  
